<div>
  <% if (report_links = @report.mentioned_reports) %>
    <h3><%= t('.mentions') %></h3>
    <ul>
      <% report_links.each do |report_link| %>
        <li>
          <%= link_to "#{report_link.mentioned_report.user.name}: #{report_link.mentioned_report.title}", report_link.mentioned_report %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
