<div id="<%= dom_id report %>">
  <p>
    <% if report.user.name.present? %>
      <strong><%= Report.human_attribute_name(:user_name) %>:</strong>
      <%= report.user.name %>
    <% else %>
      <strong><%= User.human_attribute_name(:email) %>:</strong>
      <%= report.user.email %>
    <% end %>
  </p>
  <p>
    <strong><%= Report.human_attribute_name(:title) %>:</strong>
    <%= report.title %>
  </p>

  <p>
    <strong><%= Report.human_attribute_name(:contents) %>:</strong>
    <%= report.contents %>
  </p>
</div>
